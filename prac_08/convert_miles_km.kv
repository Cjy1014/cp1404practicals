BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        TextInput:
            id: input_miles
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.handle_convert(self.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert(input_miles.text)
        background_color: (0.3, 0.3, 0.3, 1)
        color: (1, 1, 1, 1)

    Label:
        id: output_label
        text: '0.00000'
        font_size: 48
        color: (1, 1, 0, 1)
        background_color: (0, 0, 0, 1)
